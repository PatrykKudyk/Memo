<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SmallGameFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:padding="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/small_00"
                    android:layout_width="93dp"
                    android:layout_height="93dp"
                    android:src="@drawable/character_fin" />

                <ImageView
                    android:id="@+id/small_01"
                    android:layout_width="93dp"
                    android:layout_height="93dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/character_fin" />

                <ImageView
                    android:id="@+id/small_02"
                    android:layout_width="93dp"
                    android:layout_height="93dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/character_fin" />

                <ImageView
                    android:id="@+id/small_03"
                    android:layout_width="93dp"
                    android:layout_height="93dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/character_fin" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/small_10"
                    android:layout_width="93dp"
                    android:layout_height="93dp"
                    android:src="@drawable/character_fin" />

                <ImageView
                    android:id="@+id/small_11"
                    android:layout_width="93dp"
                    android:layout_height="93dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/character_fin" />

                <ImageView
                    android:id="@+id/small_12"
                    android:layout_width="93dp"
                    android:layout_height="93dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/character_fin" />

                <ImageView
                    android:id="@+id/small_13"
                    android:layout_width="93dp"
                    android:layout_height="93dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/character_fin" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/small_20"
                    android:layout_width="93dp"
                    android:layout_height="93dp"
                    android:src="@drawable/character_fin" />

                <ImageView
                    android:id="@+id/small_21"
                    android:layout_width="93dp"
                    android:layout_height="93dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/character_fin" />

                <ImageView
                    android:id="@+id/small_22"
                    android:layout_width="93dp"
                    android:layout_height="93dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/character_fin" />

                <ImageView
                    android:id="@+id/small_23"
                    android:layout_width="93dp"
                    android:layout_height="93dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/character_fin" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/small_30"
                    android:layout_width="93dp"
                    android:layout_height="93dp"
                    android:src="@drawable/character_fin" />

                <ImageView
                    android:id="@+id/small_31"
                    android:layout_width="93dp"
                    android:layout_height="93dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/character_fin" />

                <ImageView
                    android:id="@+id/small_32"
                    android:layout_width="93dp"
                    android:layout_height="93dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/character_fin" />

                <ImageView
                    android:id="@+id/small_33"
                    android:layout_width="93dp"
                    android:layout_height="93dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/character_fin" />
            </LinearLayout>

            <Button
                android:id="@+id/back_button"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:background="@drawable/button_background_medium"
                android:fontFamily="@font/amaticbold"
                android:text="@string/button_back"
                android:textColor="@color/colorBackground"
                android:textSize="30sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>